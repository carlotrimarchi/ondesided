{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
